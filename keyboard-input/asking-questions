import java.util.Scanner;

public class AskingQuestions{

	public static void main(String[] args){
	
		int age, heightFeet, heightInches;
		double weight;
		
		Scanner keyboard = new Scanner(System.in);
		
		System.out.print("How old are you? ");
		age = keyboard.nextInt();
		
		System.out.print("How tall are you? (in feet) ");
		heightFeet = keyboard.nextInt();
		
		System.out.print("Just " + heightFeet + " even? ");
		heightInches = keyboard.nextInt();
		
		System.out.print("How much do you weigh? ");
		weight = keyboard.nextInt();
		
		System.out.println("\nOk, so you are " + age + " years old, "
				+ heightFeet + "\'" + heightInches + "\"" + " tall"
				+ " and you weigh " + weight + " lbs");		
	
	}

}
